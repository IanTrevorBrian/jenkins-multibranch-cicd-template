pipeline {
  agent any

  environment {
    REGISTRY = "localhost:5000"
    IMAGE = "node-health-service"
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies') {
      steps {
        dir('app') {
          sh 'npm ci'
        }
      }
    }

    stage('Build App') {
      steps {
        dir('app') {
          sh 'npm run build || echo "No build step required"'
        }
      }
    }

    stage('Unit Tests') {
      steps {
        dir('app') {
          sh 'npm test'
        }
      }
    }

    stage('Static Code Analysis') {
      steps {
        dir('app') {
          sh 'npm run lint'
        }
      }
    }

    stage('Build Docker Image') {
      when {
        anyOf {
          branch 'test'
          branch 'prod'
        }
      }
      steps {
        script {
          env.TAG = (env.BRANCH_NAME == 'prod') ?
            "release-${env.BUILD_NUMBER}" :
            "test-${env.BUILD_NUMBER}"
        }
        sh "docker build -t ${REGISTRY}/${IMAGE}:${TAG} app"
      }
    }

    stage('Security Scan') {
      when {
        anyOf {
          branch 'test'
          branch 'prod'
        }
      }
      steps {
        sh "trivy image ${REGISTRY}/${IMAGE}:${TAG}"
      }
    }

    stage('Push Docker Image') {
      when {
        anyOf {
          branch 'test'
          branch 'prod'
        }
      }
      steps {
        withCredentials([
          usernamePassword(
            credentialsId: 'docker-registry-creds',
            usernameVariable: 'REG_USER',
            passwordVariable: 'REG_PASS'
          )
        ]) {
          sh """
            echo "$REG_PASS" | docker login $REGISTRY -u "$REG_USER" --password-stdin
            docker push ${REGISTRY}/${IMAGE}:${TAG}
            docker logout $REGISTRY
          """
        }
      }
    }
  }
}





